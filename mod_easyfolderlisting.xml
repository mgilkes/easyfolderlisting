<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9" type="module" client="site" method="upgrade">
	<name>MOD_EASYFOLDERLISTING</name>
	<author>Michael Gilkes (Valor Apps)</author>
	<creationDate>February 2012</creationDate>
	<copyright>Copyright (C) 2010-2019 Michael Albert Gilkes. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPLv2</license>
	<authorEmail>michael@valorapps.com</authorEmail>
	<authorUrl>https://www.valorapps.com</authorUrl>
	<version>3.0.4</version>
	<description>MOD_EFL_DESCRIPTION</description>
	<namespace>ValorApps\Module\EasyFolderListing</namespace>
	<help url="MOD_EFL_DOCUMENTATION" />
	<updateservers>
		<server type="extension" priority="2" name="Easy Folder Listing">https://www.valorapps.com/index.php/component/pureupdateserver/extension/xml/1/file.xml</server>
	</updateservers>
	<files>
		<filename>CHANGELOG.php</filename>
		<filename>index.html</filename>
		<filename>license.txt</filename>
		<filename module="mod_easyfolderlisting">mod_easyfolderlisting.php</filename>
		<filename>readme.txt</filename>
		<folder>elements</folder>
		<folder>Helper</folder>
		<folder>tmpl</folder>
	</files>
	<media destination="mod_easyfolderlisting">
		<folder>icons</folder>
	</media>
	<languages folder="language">
		<language tag="de-DE">de-DE/de-DE.mod_easyfolderlisting.ini</language>
		<language tag="de-DE">de-DE/de-DE.mod_easyfolderlisting.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_easyfolderlisting.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_easyfolderlisting.sys.ini</language>
		<language tag="en-US">en-US/en-US.mod_easyfolderlisting.ini</language>
		<language tag="en-US">en-US/en-US.mod_easyfolderlisting.sys.ini</language>
		<language tag="es-ES">es-ES/es-ES.mod_easyfolderlisting.ini</language>
		<language tag="es-ES">es-ES/es-ES.mod_easyfolderlisting.sys.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.mod_easyfolderlisting.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.mod_easyfolderlisting.sys.ini</language>
		<language tag="hu-HU">hu-HU/hu-HU.mod_easyfolderlisting.ini</language>
		<language tag="hu-HU">hu-HU/hu-HU.mod_easyfolderlisting.sys.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.mod_easyfolderlisting.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.mod_easyfolderlisting.sys.ini</language>
	</languages>
	<config>
		<fields name="params" addfieldpath="/modules/mod_easyfolderlisting/elements">
			<fieldset name="basic">
				<field name="efl_parent" 
					type="fixedfolderlist" 
					default="images" 
					label="MOD_EFL_PARENT_LABEL" 
					directory="" 
					description="MOD_EFL_PARENT_DESC" 
					hide_none="true" 
					hide_default="true" 
					exclude="^[Aa]dministrator$|^[Cc]ache$|^[Cc]omponents$|^[Cc]li$|^[Ii]ncludes$|^[Ll]anguage$|^[Ll]ibraries$|^[Ll]ogs$|^[Mm]odules$|^[Pp]lugins$|^[Tt]emplates$|^[Xx]mlrpc$" 
				/>
				<field name="efl_folder" 
					type="text" 
					default="" 
					label="MOD_EFL_FOLDER_LABEL" 
					description="MOD_EFL_FOLDER_DESC" 
				/>
				<field name="efl_numberfiles" 
					type="number" 
					default="0" 
					label="MOD_EFL_NUMBERFILES_LABEL" 
					description="MOD_EFL_NUMBERFILES_DESC" 
					step="1" 
				/>
				<field name="efl_spacer_utf8" 
					type="spacer" 
					label="MOD_EFL_UTF8_SPACER" 
				/>
				<field name="efl_encodeutf8" 
					type="list" 
					default="none" 
					label="MOD_EFL_ENCODE_UTF8_LABEL" 
					description="MOD_EFL_ENCODE_UTF8_DESC" 
				>
					<option value="plain">MOD_EFL_PLAIN_VALUE</option>
					<option value="translit">MOD_EFL_TRANSLIT_VALUE</option>
					<option value="ignore">MOD_EFL_IGNORE_VALUE</option>
					<option value="encode">MOD_EFL_ENCODE_VALUE</option>
					<option value="none">MOD_EFL_NONE_VALUE</option>
				</field>
				<field name="efl_srcencoding" 
					type="text" 
					default="ISO-8859-1" 
					label="MOD_EFL_SOURCE_ENCODING_LABEL" 
					description="MOD_EFL_SOURCE_ENCODING_DESC" 
				/>
				<field name="efl_spacer_custom" 
					type="spacer" 
					label="MOD_EFL_SETTINGS_SPACER" 
				/>
				<field name="efl_icons" 
					type="list" 
					default="1" 
					label="MOD_EFL_ICONS_LABEL" 
					description="MOD_EFL_ICONS_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="efl_extensions" 
					type="list" 
					default="0" 
					label="MOD_EFL_EXTENSIONS_LABEL" 
					description="MOD_EFL_EXTENSIONS_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="efl_size" 
					type="list" 
					default="1" 
					label="MOD_EFL_SHOWSIZE_LABEL" 
					description="MOD_EFL_SHOWSIZE_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="efl_date" 
					type="list" 
					default="1" 
					label="MOD_EFL_SHOWDATE_LABEL" 
					description="MOD_EFL_SHOWDATE_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="efl_time" 
					type="list" 
					default="1" 
					label="MOD_EFL_SHOWTIME_LABEL" 
					description="MOD_EFL_SHOWTIME_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="efl_linktofiles" 
					type="list" 
					default="1" 
					label="MOD_EFL_LINKTOFILES_LABEL" 
					description="MOD_EFL_LINKTOFILES_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="efl_linktoblank" 
					type="list" 
					default="1" 
					label="MOD_EFL_LINKTOBLANK_LABEL" 
					description="MOD_EFL_LINKTOBLANK_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="efl_forbidden" 
					type="textarea" 
					default="htm;html;php;DS_Store" 
					label="MOD_EFL_FORBIDDEN_LABEL" 
					description="MOD_EFL_FORBIDDEN_DESC" 
					rows="10" 
					cols="40" 
				/>
				<field name="efl_spacer_visual" 
					type="spacer" 
					label="MOD_EFL_VISUAL_SPACER" 
				/>
				<field name="efl_method" 
					type="list" 
					default="table" 
					label="MOD_EFL_METHOD_LABEL" 
					description="MOD_EFL_METHOD_DESC"
				>
					<option value="table">MOD_EFL_TABLE_VALUE</option>
					<option value="list">MOD_EFL_LIST_VALUE</option>
					<option value="layout">JFIELD_ALT_LAYOUT_LABEL</option>
				</field>
				<field name="efl_sortcolumn" 
					type="list" 
					default="name" 
					label="MOD_EFL_SORTCOLUMN_LABEL" 
					description="MOD_EFL_SORTCOLUMN_DESC" 
				>
					<option value="name">MOD_EFL_NAME_VALUE</option>
					<option value="size">MOD_EFL_SIZE_VALUE</option>
					<option value="date">MOD_EFL_DATE_VALUE</option>
				</field>
				<field name="efl_sortdirection" 
					type="list" 
					default="asc" 
					label="MOD_EFL_SORTDIRECTION_LABEL" 
					description="MOD_EFL_SORTDIRECTION_DESC" 
				>
					<option value="asc">MOD_EFL_ASCENDING_VALUE</option>
					<option value="desc">MOD_EFL_DESCENDING_VALUE</option>
				</field>
				<field name="efl_oddcolor" 
					type="color" 
					default="#F0F0F6" 
					label="MOD_EFL_ODDCOLOR_LABEL" 
					description="MOD_EFL_ODDCOLOR_DESC" 
				/>
				<field name="efl_evencolor" 
					type="color" 
					default="#FFFFFF" 
					label="MOD_EFL_EVENCOLOR_LABEL" 
					description="MOD_EFL_EVENCOLOR_DESC" 
				/>
				<field name="efl_headcolor" 
					type="color" 
					default="#E6EEEE" 
					label="MOD_EFL_HEADCOLOR_LABEL" 
					description="MOD_EFL_HEADCOLOR_DESC" 
				/>
				<field name="efl_bordercolor" 
					type="color" 
					default="#CDCDCD" 
					label="MOD_EFL_BORDERCOLOR_LABEL" 
					description="MOD_EFL_BORDERCOLOR_DESC" 
				/>
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" 
					type="modulelayout" 
					label="JFIELD_ALT_LAYOUT_LABEL" 
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" 
				/>
				<field name="moduleclass_sfx" 
					type="text" 
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" 
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" 
				/>
			</fieldset>
		</fields>
	</config>
</extension>
